                </li>
                <li class="list-group-item">
                    {{ 'Technical Support'|trans }}
                    <span class="glyphicon glyphicon-ok pull-right"></span>
                </li>
            </ul>
            <div class="panel-footer">
                {% if current_user_sub.subscription_id == 3 %}
                    <p class="btn btn-lg btn-block btn-default">{{ 'Your plan'|trans }}</p>
                {% else %}
                    <a class="btn btn-lg btn-block btn-success">{{ 'Set this plan'|trans }}</a>
                {% endif %}
            </div>
        </div><!-- /.panel .panel-primary -->
    </div><!-- /.col-md-4 -->
</section><!-- /#page -->