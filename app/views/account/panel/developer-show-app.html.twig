<section id="header">
    <div class="col-lg-12">
        <h1 class="page-header">{{ 'Show Application'|trans }}</h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('app_account_panel', {'page': 'developer-applications'}) }}">{{ 'Developer'|trans }}</a></li>
            <li><a href="{{ path('app_account_panel', {'page': 'developer-applications'}) }}">{{ 'Applications'|trans }}</a></li>
            <li class="active">{{ app.client_name }}</li>
        </ol><!-- /.breadcrumb -->
        <hr />
    </div><!-- /.col-lg-12 -->
</section><!-- /#header -->
<section id="page">
    <div class="col-md-12">
        <h4>{{ app.client_name }}</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>{{ 'App ID'|trans }}</td>
                        <td>{{ app.client_id }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'Secret Key'|trans }}</td>
                        <td><code>{{ app.client_secret }}</code></td>
                    </tr>
                    <tr>
                        <td>{{ 'Redirect URI'|trans }}</td>
                        <td>{{ app.redirect_uri }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'Permissions'|trans }}</td>
                        <td>{{ app.scope }}</td>
                    </tr>
                </tbody>
            </table><!-- /.table -->
        </div><!-- /.table-responsive -->
        <br />
        <p>
            {{ 'Check out this page to learn how to integrate Oauth2:'|trans }}
            <a href="{{ url('app_developer_page', {'page': 'oauth/unauthorized.php'}) }}">{{ url('app_developer_page', {'page': 'oauth/unauthorized.php'}) }}</a>
        </p>
    </div><!-- /.col-md-12 -->
</section><!-- /#page -->
