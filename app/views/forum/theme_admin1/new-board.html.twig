<section id="header">
    <div class="col-lg-12">
        <h1 class="page-header">{{ 'New Board'|trans }}</h1>
        <ol class="breadcrumb">
            <li>{{ 'Boards'|trans }}</li>
            <li class="active">{{ 'Create...'|trans }}</li>
        </ol><!-- /.breadcrumb -->
        <hr />
    </div><!-- /.col-lg-12 -->
</section><!-- /#header -->
<section id="page">
    <div class="col-md-4">
        {% if board_added|length > 0 and board_added == 1 %}
            <div class="alert alert-success fade in alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                {{ 'Your board/category was added!'|trans }}
            </div>
        {% elseif board_added|length > 0 and board_added == 0 %}
            <div class="alert alert-danger fade in alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                {{ 'Your board/category wasn\'t added! Try again'|trans }}
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ 'Add board'|trans }}
            </div>
            <div class="panel-body">
                {{ form_start(create_board_form, {'action': path('app_forum_forum_admin', {'forum': current_forum.url, 'page': 'new-board'}), 'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_row(create_board_form._token) }}
                    {{ form_errors(create_board_form) }}
                    <div class="form-group">
                        {{ form_label(create_board_form.name, null, {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(create_board_form.name, {'attr': {'class': 'form-control input-md'}}) }}
                            <span class="help-block">{{ 'How should your board be called?'|trans }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(create_board_form.description, null, {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(create_board_form.description, {'attr': {'class': 'form-control input-md'}}) }}
                            <span class="help-block">{{ 'You want to add a description for more information? (optional)'|trans }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(create_board_form.parent, null, {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(create_board_form.parent, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ 'For what forum should this be the child?'|trans }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(create_board_form.type, null, {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        <div class="col-md-7">
                            {% for key, type in create_board_form.type %}
                            <label class="radio-inline">
                                {# TODO: Label shouldn't be displayed bold! Reason: It's in a <label> field. Answer: Change form theme? #}
                                {{ form_widget(type) }} {{ form_label(type) }}
                            </label>
                            {% endfor %}
                            <span class="help-block">{{ 'What do you want to add?'|trans }}</span>
                        </div>
                    </div>
                    <hr />
                    {{ form_widget(create_board_form.send, {'attr': {'class': 'btn btn-success btn-block'}}) }}
                {{ form_end(create_board_form) }}
            </div>
        </div>
    </div>
</section><!-- /#page -->
