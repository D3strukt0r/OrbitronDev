{% extends 'forum/theme1/layout.html.twig' %}

{% set service_page_links %}
    {% for text,link in current_forum.page_links %}
        <li><a href="{{ link }}">{{ text }}</a></li>
    {% endfor %}
{% endset %}
{% set service = {
'page_name': current_forum.name,
'page_logo_link': '/' ~ current_forum.url,
'page_author': current_forum.owner_username,
'page_description': current_forum.page_description,
'page_keywords': current_forum.page_keywords,
'page_links': service_page_links
} %}

{% block title %}{{ current_thread.topic }} | {{ service.page_name }}{% endblock %}

{% block header %}
    <div class="container">
        <h1 class="page-header">{{ current_thread.topic }}</h1>
    </div><!-- /.container -->
{% endblock %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('app_forum_forum_index', {'forum': current_forum.url}) }}">{{ 'Home'|trans }}</a></li>
            {% for key,level in breadcrumb %}
                {% if level.type == 1 %}
                    <li><a href="{{ path('app_forum_forum_board', {'forum': current_forum.url, 'board': level.id}) }}">{{ level.title }}</a></li>
                {% endif %}
            {% endfor %}
            <li><a href="{{ path('app_forum_forum_board', {'forum': current_forum.url, 'board': current_board.id}) }}">{{ current_board.title }}</a></li>
            <li class="active">{{ current_thread.topic }}</li>
        </ol><!-- /.breadcrumb -->
    </div><!-- /.container -->
{% endblock %}

{% block content %}
    <div class="container">
        {% if posts|length > 0 %}
            {% for post in posts %}
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-condensed">
                        <tbody>
                            <tr>
                                <td class="col-md-2">
                                    <p class="text-center">{{ post.formatted_username|raw }}</p>
                                    <a href="#" class="thumbnail">
                                        <img src="{{ path('app_account_api', {'function': 'get_img', 'user_id': post.user_id, 'height': 200, 'width': 200}) }}" alt="" />
                                    </a>
                                </td>
                                <td>{{ post.formatted_message|raw }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            {% endfor %}
        {% endif %}

        <div class="row">
            <div class="col-md-8">
                {% if pagination.pages_count > 1 %}
                    <ul class="pagination" style="margin:0">

                        {# Previous Page #}
                        {% if pagination.current_page > 1 %}
                            <li><a href="{{ path('app_forum_forum_thread', {'forum': current_forum.url, 'thread': current_forum.id, 'page': pagination.previous_page, 'show': pagination.item_limit}) }}" aria-label="{{ 'Previous'|trans }}"><span aria-hidden="true">&laquo;</span></a></li>
                        {% else %}
                            <li class="disabled"><a aria-label="{{ 'Previous'|trans }}"><span aria-hidden="true">&laquo;</span></a></li>
                        {% endif %}

                        {# Pager #}
                        {% if pagination.pages_count < (7 + (pagination.adjacents * 2)) %}{# not enough pages to bother breaking it up #}
                            {% set page_counter = 1 %}
                            {% for i in page_counter..pagination.pages_count %}
                                {% if page_counter == pagination.current_page %}
                                    <li class="active"><a>{{ page_counter }}</a></li>
                                {% else %}
                                    <li><a href="{{ path('app_forum_forum_thread', {'forum': current_forum.url, 'thread': current_forum.id, 'page': page_counter, 'show': pagination.item_limit}) }}">{{ page_counter }}</a></li>
                                {% endif %}
                                {% set page_counter = page_counter + 1 %}
                            {% endfor %}
                        {% else %}{# enough pages to hide some #}

                        {% endif %}

                        {# Next page #}
                        {% if pagination.current_page < pagination.last_page_m1 %}
                            <li><a href="{{ path('app_forum_forum_thread', {'forum': current_forum.url, 'thread': current_forum.id, 'page': pagination.next_page, 'show': pagination.item_limit}) }}" aria-label="{{ 'Next'|trans }}"><span aria-hidden="true">&raquo;</span></a></li>
                        {% else %}
                            <li class="disabled"><a aria-label="{{ 'Next'|trans }}"><span aria-hidden="true">&raquo;</span></a></li>
                        {% endif %}

                    </ul><!-- /.pagination -->
                {% endif %}
            </div>
            {% if current_user.user_id > -1 %}
                <div class="col-md-4">
                    <p class="text-right"><a href="{{ path('app_forum_forum_create_post', {'forum': current_forum.url, 'thread': current_thread.id}) }}" class="btn btn-primary">{{ 'Post reply'|trans }}</a></p>
                </div>
            {% endif %}
        </div>
    </div><!-- /.container -->
{% endblock %}
