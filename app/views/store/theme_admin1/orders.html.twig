<section id="header">
    <div class="col-lg-12">
        <h1 class="page-header">{{ 'Orders'|trans }}</h1>
        <ol class="breadcrumb">
            <li>{{ 'Shop'|trans }}</li>
            <li class="active">{{ 'Orders'|trans }}</li>
        </ol><!-- /.breadcrumb -->
        <hr />
    </div><!-- /.col-lg-12 -->
</section><!-- /#header -->
<section id="page">
    <div class="col-lg-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>{{ 'ID'|trans }}</th>
                    <th>{{ 'Products'|trans }}</th>
                    <th>{{ 'Delivery'|trans }}</th>
                    <th>{{ 'Status'|trans }}</th>
                    <th>{{ 'Full name'|trans }}</th>
                    <th>{{ 'Email'|trans }}</th>
                    <th>{{ 'Phone'|trans }}</th>
                    <th>{{ 'Street & House Nr.'|trans }}</th>
                    <th>{{ 'ZIP code & City'|trans }}</th>
                    <th>{{ 'Country'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>
                            {% for product in order.product_list %}
                                <span class="dropdown">
                                    <a class="dropdown-toggle show-tooltip" href="#" data-placement="bottom" data-toggle="dropdown"><span class="img-thumbnail"><img src="{{ asset('app/store/products_img/' ~ product.id ~ '/' ~ product.small_icon) }}" height="30" width="30" /> <span class="caret"></span></span></a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-header">{{ 'Amount'|trans }}</li>
                                        <li><a href="#">{{ product.count }}</a></li>
                                        <li class="dropdown-header">{{ 'Price'|trans }}</li>
                                        <li><a href="#">
                                            {% if product.in_sale %}<span style="text-decoration:line-through">{% endif %}
                                                {% if product.price == 0 %}
                                                    {{ 'Free'|trans }}
                                                {% else %}
                                                    {{ product.price|number_format(2, '.', '\'') }} $ {# TODO: Make this editable by the user #}
                                                {% endif %}
                                                {% if product.in_sale %}</span>{% endif %}
                                            |
                                            {% if product.price_sale == 0 %}
                                                {{ 'Free'|trans }}
                                            {% else %}
                                                {{ product.price_sale|number_format(2, '.', '\'') }} $ {# TODO: Make this editable by the user #}
                                            {% endif %}
                                        </a></li>
                                        <li class="dropdown-header">{{ 'Total price'|trans }}</li>
                                        <li><a href="#">
                                            {% set product_total_price = product.price * product.count %}
                                            {% set product_total_price_sale = product.price_sale * product.count %}
                                            {% if product.in_sale %}<span style="text-decoration:line-through">{% endif %}
                                                {% if product_total_price == 0 %}
                                                    {{ 'Free'|trans }}
                                                {% else %}
                                                    {{ product_total_price|number_format(2, '.', '\'') }} $ {# TODO: Make this editable by the user #}
                                                {% endif %}
                                                {% if product.in_sale %}</span>{% endif %}
                                            |
                                            {% if product_total_price_sale == 0 %}
                                                {{ 'Free'|trans }}
                                            {% else %}
                                                {{ product_total_price_sale|number_format(2, '.', '\'') }} $ {# TODO: Make this editable by the user #}
                                            {% endif %}
                                        </a></li>
                                    </ul>
                                </span>
                            {% endfor %}
                        </td>
                        <td>{{ order.delivery_type }}</td>
                        <td>
                            {% if order.status == 0 %}
                                <span class="text-danger">{{ 'Not processed'|trans }}</span> <a href="{{ path('app_store_store_admin', {'store': current_store.url, 'page': 'change_order_statement_to_1', 'order_id': order.id}) }}" class="btn btn-xs btn-warning">{{ 'Process'|trans }}</a>
                            {% elseif order.status == 1 %}
                                <span class="text-warning">{{ 'Not sent'|trans }}</span> <a href="{{ path('app_store_store_admin', {'store': current_store.url, 'page': 'change_order_statement_to_2', 'order_id': order.id}) }}" class="btn btn-xs btn-success">{{ 'Send'|trans }}</a>
                            {% elseif order.status == 2 %}
                                <span class="text-success">{{ 'Sent'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>{{ order.name }}</td>
                        <td>{{ order.email }}</td>
                        <td>{{ order.phone }}</td>
                        <td>{{ order.street }}</td>
                        <td>{{ order.zip_code }} {{ order.city }}</td>
                        <td>{{ order.country }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <!-- /.table .table-hover -->
    </div>
</section><!-- /#page -->
