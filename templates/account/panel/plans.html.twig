                </li>
                <li class="list-group-item">
                    {{ 'Technical Support'|trans }}
                    <span class="fa fa-check pull-right"></span>
                </li>
            </ul>
            <div class="card-footer">
                {% if current_user.subscription.subscription.id == 3 %}
                    <p class="btn btn-lg btn-block btn-primary mb-0">{{ 'Your plan'|trans }}</p>
                {% else %}
                    <a class="btn btn-lg btn-block btn-success text-white mb-0">{{ 'Set this plan'|trans }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
