<h1>{{ 'Main dashboard'|trans }}</h1>
<hr />
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item active">{{ 'Home'|trans }}</li>
</ol>
<hr />
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">{{ 'User data'|trans }}</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <td><b>{{ 'ID'|trans }}</b></td>
                                <td>{{ current_user.id }}</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td><b>{{ 'Username'|trans }}</b></td>
                                <td>{{ current_user.username }}</td>
                                <td><a href="{{ path('app_account_panel', {'page': 'account'}) }}" class="btn btn-primary btn-sm">{{ 'Edit'|trans }}</a></td>
                            </tr>
                            <tr>
                                <td><b>{{ 'Password'|trans }}</b></td>
                                <td>**********</td>
                                <td><a href="{{ path('app_account_panel', {'page': 'account'}) }}" class="btn btn-primary btn-sm">{{ 'Edit'|trans }}</a></td>
                            </tr>
                            <tr>
                                <td><b>{{ 'Email'|trans }}</b></td>
                                <td>{{ current_user.email }}</td>
                                <td><a href="{{ path('app_account_panel', {'page': 'account'}) }}" class="btn btn-primary btn-sm">{{ 'Edit'|trans }}</a></td>
                            </tr>
                            <tr>
                                <td><b>{{ 'Email Activated'|trans }}</b></td>
                                <td>{% if current_user.emailVerified == 1 %}{{ 'Yes'|trans }}{% else %}{{ 'No'|trans }}{% endif %}</td>
                                <td>{% if not current_user.emailVerified %}<a href="/confirm" class="btn btn-warning btn-sm">{{ 'Activate'|trans }}</a>{% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td><b>{{ 'Credits'|trans }}</b></td>
                                <td>{{ current_user.credits|number_format(0, '.', '\'') }}</td>
                                <td><a href="{{ path('app_account_panel', {'page': 'buy-credits'}) }}" class="btn btn-success btn-sm">{{ 'Buy credits'|trans }}</a></td>
                            </tr>
                        </tbody>
                    </table><!-- /.table .table-hover -->
                </div><!-- /.table-responsive -->
            </div>
        </div>
    </div>
    {% if service_allowed %}
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">{{ 'Service'|trans }}</div>
            <div class="card-body"></div>
        </div>
    </div>
    {% else %}
        <div class="col-lg-6">
            <div class="card bg-warning text-white">
                <div class="card-header">
                    <b>{{ 'Service'|trans }}</b>
                </div><!-- /.panel-heading -->
                <div class="card-body">
                    <p>{{ 'You have not activated our service'|trans }}</p>
                </div><!-- /.panel-body -->
            </div><!-- /.panel .panel-info -->
        </div><!-- /.col-lg-6 -->
    {% endif %}
</div><!-- /#page -->
