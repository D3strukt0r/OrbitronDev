<h1>{{ 'Catalogue/Products'|trans }}</h1>
<hr />
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">{{ 'Shop'|trans }}</li>
    <li class="breadcrumb-item active">{{ 'Products'|trans }}</li>
</ol>
<hr />
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Short description'|trans }}</th>
            <th>{{ 'Long description'|trans }}</th>
            <th>{{ 'Price'|trans }}</th>
            <th>{{ 'SALE! Price'|trans }}</th>
            <th>{{ 'Small image'|trans }}</th>
            <th>{{ 'Big image'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>{% for language, item in product.names %}{{ language }} => {{ item }} |{% endfor %}</td>
                <td>{% for language, item in product.short_descriptions %}{{ language }} => {{ item }} |{% endfor %}</td>
                <td>{% for language, item in product.descriptions %}{{ language }} => {{ item }} |{% endfor %}</td>
                <td>{% for currency, item in product.prices %}{{ currency }} => {{ item }} |{% endfor %}</td>
                <td>{% for currency, item in product.salePrices %}{{ currency }} => {{ item }} |{% endfor %}</td>
                <td>{{ product.small_icon }}</td>
                <td>{% for image in product.images %}{{ image.image }} |{% endfor %}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
