{% extends 'error/layout.html.twig' %}

{% block title %}404 Not Found | OrbitronDev{% endblock %}

{% block content %}
    <!--=== Error V4 ===-->
    <div class="container content">
        <!--Error Block-->
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="error-v4">
                    <a href="{{ path('app_default_index') }}">
                        <img src="{{ asset('assets/logo-long.png') }}" alt="OrbitronDev" height="30px" />
                    </a>
                    <h1>404</h1>
                    <span class="sorry">{{ 'The requested URL was not found on this server.'|trans }}</span>
                    {#{% set referer = app.request.server.get('http-referer') %}
                    {% if not referer == '/' %}#}
                    <span class="sorry">{{ 'The link on the'|trans }} <a href="{{ referer }}">{{ 'referring page'|trans }}</a> {{ 'seems to be wrong or outdated. Please inform the author of'|trans }} <a href="{{ referer }}">{{ 'that page'|trans }}</a> {{ 'about the error.'|trans }}</span>
                    {#{% else %}#}
                    <span class="sorry">{{ 'If you entered the URL manually please check your spelling and try again.'|trans }}</span>
                    {#{% endif %}#}

                    <p style="color:white;margin-top:-30px;">Server message: [Code: {{ status_code }}] {{ status_text }}</p>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <a class="btn-u btn-brd btn-u-light" href="{{ path('app_default_index') }}">{{ 'Go Back to Main Page'|trans }}</a>
                            <a class="btn-u btn-brd btn-u-light" href="javascript:window.history.back();">{{ 'Go Back'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/container-->
    <!--End Error Block-->
{% endblock %}
